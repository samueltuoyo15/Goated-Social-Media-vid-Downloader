{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"]
}
